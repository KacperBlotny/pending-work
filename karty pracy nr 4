// ZADANIE 1

//1

long double pot(int o, int p)
{
    long double pomocnicza = 1;
    if(p != 0);
   {
    for(int i=0; i<p; i++)
    {
        pomocnicza = pomocnicza * o;
    }

   }
    return pomocnicza;
}


//2

void pelnoletnosc(int u)
{
    if(u>=18) cout << "Uytkownik jest pelnoletni.";
        else cout << "Uzytkonik nie jest pelnoletni.";
}


//3

long double fib(int f)
{
    int p=0, d=1;
    for(int i=1; i<f; i++)
            {
                    p=p+d;
                    d=p-d;
                if(d==0) cout << "";
                    else
                     cout << d << " ";

            }
    return d;
}



